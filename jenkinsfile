pipeline {
    agent {
        node {
            label 'slave_build'   // This ensures the job runs on the agent with the 'slave_build' label
        }
    }
    stages {
        stage('Build') {
            steps {
                echo 'Building...'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing...'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying...'
            }
        }
    }
}
